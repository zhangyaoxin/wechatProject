/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 60rpx;
  text-align: left;
  width: 650rpx;
}
.user-motto{
  font-size: 50rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: left;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}
.user_hinttit{
  font-size: 30rpx;
  color: #888888;
  letter-spacing: 0;
  line-height: 50rpx;
}
.logo{
  width: 100%;
  position: relative;
  height: 124rpx;
}
.wx_logo{
  width: 100rpx;
  color: #888;
  text-align: center;
  position: absolute;
  left: 20rpx;
}
.logo_zh1{
  color: #fff;
  background: #888;
  display: block;
  width: 100rpx;
  border-radius: 3px 3px 0 0;
}
.logo_zh2{
  border-radius: 3px;
  border: solid 2rpx #888;
  display: block;
  width: 96rpx;
  margin-top: -2px;
}
.logo_en{
  font-size: 14rpx;
  line-height: 25rpx;
  display:block;
}
.put_text{
  font-size: 34rpx;
  width: 650rpx;
}
.put_tel,.get_code{
  width: 300rpx;
  font-size: 32rpx;
  margin-top:43rpx;
  /* height: 34rpx;
  min-height: 34rpx; */
  padding-left: 1em;
  border-left: 1px solid #F0F0F0; 
  font-family: PingFangSC-Regular;
}
.inte_tel,.inte_code{
  display: flex;
  height: 118rpx;
  line-height: 120rpx;
  border-bottom: 1px solid #F0F0F0;
}
.label{
  padding: 0 1em 0 0;
}
.code_get{
  font-size: 30rpx;
  text-align: center;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 16rpx;
  margin-top: 28rpx;
  background: #8BB3F4;
  color: #fff;
}
/* .code_get:hover{
  background: #5286EC;
} */
.verify{
  width: 100%;
  text-align: center;
  height: 88rpx;
  color: #fff;
  background: #5286EC;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-top: 100rpx;
  border-radius: 16rpx;
}